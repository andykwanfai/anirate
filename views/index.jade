    p.title 本季評分TOP 5
    ul.ranking 
      br
      -var n = 1;
      each item in rate_top_5
        li 
          a(href="/anime/"+item.aid) 
            .imgCrop(style='background-image:url('+item.img_path+')')
            br
            !{item.name}
          br
          .rank
            第 !{n++} 位： !{item.avg_score} 分
    p.title 本季觀看人數TOP 5        
    ul.ranking 
      -var m = 1;
      each item in view_top_5
        li 
          a(href="/anime/"+item.id) 
            .imgCrop(style='background-image:url('+item.img_path+')')
            br
            !{item.name}
          br
          .rank
            第 !{m++} 位： !{item.views}
    
